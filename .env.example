# ============================================================
# Telegram API Checker Bot - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================================

# -----------------------------
# Telegram Bot Configuration
# -----------------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=8440573724:AAGFEW0MSo2G7kPrDtvQRBi2E-bWrRiOSXU

# Bot admin user IDs (comma-separated)
TELEGRAM_ADMIN_IDS=

# Enable inline mode (true/false)
TELEGRAM_ENABLE_INLINE=true

# Drop pending updates on start (true/false)
TELEGRAM_DROP_PENDING_UPDATES=false

# -----------------------------
# Database Configuration
# -----------------------------
# Database URL (SQLite, PostgreSQL, MySQL supported)
DATABASE_URL=sqlite:///data/bot.db

# Database pool size
DATABASE_POOL_SIZE=10

# Database echo SQL queries (true/false)
DATABASE_ECHO=false

# -----------------------------
# Browser Automation
# -----------------------------
# Chrome/Chromium binary path (leave empty for auto-detection)
CHROME_BINARY_PATH=

# Headless mode (true/false)
BROWSER_HEADLESS=true

# Browser window size
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Page load timeout (seconds)
BROWSER_TIMEOUT=30

# User agent rotation (true/false)
BROWSER_ROTATE_USER_AGENT=true

# -----------------------------
# Selenium Configuration
# -----------------------------
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30
SELENIUM_SCRIPT_TIMEOUT=30

# -----------------------------
# Playwright Configuration
# -----------------------------
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_SLOW_MO=0
PLAYWRIGHT_DOWNLOADS_PATH=./downloads

# -----------------------------
# Network Interception
# -----------------------------
# Enable request logging (true/false)
NETWORK_LOG_REQUESTS=true

# Enable response logging (true/false)
NETWORK_LOG_RESPONSES=true

# Max request/response body size to log (bytes)
NETWORK_MAX_LOG_SIZE=10240

# Enable network HAR export (true/false)
NETWORK_EXPORT_HAR=false

# -----------------------------
# API Discovery
# -----------------------------
# Common API endpoints to check
API_COMMON_ENDPOINTS=/api,/v1,/v2,/graphql,/rest

# Max endpoints to discover
API_MAX_ENDPOINTS=50

# API discovery timeout (seconds)
API_DISCOVERY_TIMEOUT=60

# -----------------------------
# Credential Validation
# -----------------------------
# Max validation attempts
VALIDATION_MAX_ATTEMPTS=3

# Validation timeout (seconds)
VALIDATION_TIMEOUT=30

# Enable detailed validation logging (true/false)
VALIDATION_DETAILED_LOG=true

# -----------------------------
# Checker Generation
# -----------------------------
# Default checker template
CHECKER_TEMPLATE=default

# Enable proxy support in generated checker (true/false)
CHECKER_ENABLE_PROXY=true

# Enable multi-threading in generated checker (true/false)
CHECKER_ENABLE_THREADING=true

# Default thread count for checker
CHECKER_DEFAULT_THREADS=10

# Enable rate limiting in checker (true/false)
CHECKER_ENABLE_RATE_LIMIT=true

# -----------------------------
# File Storage
# -----------------------------
# Base directory for file storage
STORAGE_BASE_DIR=./storage

# Projects directory
STORAGE_PROJECTS_DIR=./storage/projects

# Temp directory
STORAGE_TEMP_DIR=./storage/temp

# Max file size for upload (MB)
STORAGE_MAX_FILE_SIZE=50

# -----------------------------
# Logging
# -----------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=detailed

# Log to file (true/false)
LOG_TO_FILE=true

# Log file path
LOG_FILE_PATH=./logs/bot.log

# Log rotation (true/false)
LOG_ROTATION=true

# Max log file size (MB)
LOG_MAX_SIZE=10

# Max log backup count
LOG_BACKUP_COUNT=5

# -----------------------------
# Security
# -----------------------------
# Enable encryption for stored credentials (true/false)
SECURITY_ENCRYPT_CREDENTIALS=true

# Encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
SECURITY_ENCRYPTION_KEY=

# Session token expiry (hours)
SECURITY_SESSION_EXPIRY=24

# Max failed login attempts before lockout
SECURITY_MAX_FAILED_ATTEMPTS=5

# Lockout duration (minutes)
SECURITY_LOCKOUT_DURATION=30

# -----------------------------
# Rate Limiting
# -----------------------------
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Max requests per user per minute
RATE_LIMIT_PER_USER=10

# Max requests per IP per minute
RATE_LIMIT_PER_IP=20

# -----------------------------
# Proxy Configuration
# -----------------------------
# Enable proxy support (true/false)
PROXY_ENABLED=false

# Proxy type (http, socks4, socks5)
PROXY_TYPE=http

# Proxy host
PROXY_HOST=

# Proxy port
PROXY_PORT=

# Proxy username
PROXY_USERNAME=

# Proxy password
PROXY_PASSWORD=

# Rotate proxies (true/false)
PROXY_ROTATE=false

# Proxy list file path
PROXY_LIST_FILE=./config/proxies.txt

# -----------------------------
# API Keys (External Services)
# -----------------------------
# 2Captcha API key (for CAPTCHA solving)
CAPTCHA_API_KEY=

# Anti-Captcha API key
ANTICAPTCHA_API_KEY=

# -----------------------------
# Development
# -----------------------------
# Development mode (true/false)
DEV_MODE=false

# Debug mode (true/false)
DEBUG=false

# Hot reload (true/false)
HOT_RELOAD=false

# Enable profiling (true/false)
ENABLE_PROFILING=false

# -----------------------------
# Advanced Features
# -----------------------------
# Enable AI-powered analysis (true/false)
AI_ENABLED=false

# OpenAI API key
OPENAI_API_KEY=

# Enable GraphQL support (true/false)
ENABLE_GRAPHQL=true

# Enable WebSocket support (true/false)
ENABLE_WEBSOCKET=true

# Max concurrent projects per user
MAX_CONCURRENT_PROJECTS=3

# Project data retention (days)
PROJECT_RETENTION_DAYS=30

# Auto-cleanup old projects (true/false)
AUTO_CLEANUP=true

# -----------------------------
# Monitoring & Analytics
# -----------------------------
# Enable monitoring (true/false)
MONITORING_ENABLED=false

# Sentry DSN
SENTRY_DSN=

# Enable analytics (true/false)
ANALYTICS_ENABLED=false

# Analytics endpoint
ANALYTICS_ENDPOINT=

# -----------------------------
# Language & Localization
# -----------------------------
# Default language (en, it)
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,it

# Timezone
TIMEZONE=UTC

# -----------------------------
# Performance
# -----------------------------
# Max workers for async tasks
MAX_WORKERS=10

# Task queue size
TASK_QUEUE_SIZE=100

# Enable caching (true/false)
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=3600

# Redis URL (for distributed caching)
REDIS_URL=

# -----------------------------
# Backup & Recovery
# -----------------------------
# Enable auto backup (true/false)
BACKUP_ENABLED=false

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup directory
BACKUP_DIR=./backups

# Max backup files to keep
BACKUP_MAX_FILES=7

# -----------------------------
# Notification Settings
# -----------------------------
# Enable email notifications (true/false)
EMAIL_ENABLED=false

# SMTP server
SMTP_SERVER=

# SMTP port
SMTP_PORT=587

# SMTP username
SMTP_USERNAME=

# SMTP password
SMTP_PASSWORD=

# Email from address
EMAIL_FROM=

# Admin email addresses (comma-separated)
ADMIN_EMAILS=

# -----------------------------
# Feature Flags
# -----------------------------
# Enable beta features (true/false)
ENABLE_BETA_FEATURES=false

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# Feature flag: Advanced fuzzing
FEATURE_ADVANCED_FUZZING=true

# Feature flag: Machine learning
FEATURE_ML_ANALYSIS=false

# Feature flag: Cloud deployment
FEATURE_CLOUD_DEPLOY=false
